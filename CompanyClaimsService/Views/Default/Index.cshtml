<!DOCTYPE html>
<html ng-app="myapp" ng-controller="HomeController">
<head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
    @Scripts.Render("~/bundles/myapp")
    <title ng-bind="models.titleApp"></title>
</head>
<body>
    <h3>{{models.titleApp}}</h3>
    
    <select ng-model="selectedDocument"
            ng-options="item.FileName as item.ClaimsFileName for item in xmlFiles"  ng-change="GetData()">
        <option value="">Select Claim File</option>
    </select>
    <br />
    
    <div ng-repeat="step in resultData">
        <div ng-repeat="(key, value) in step">
            <h4>{{value.section_name}}</h4>
            <ul>
                <li ng-repeat="val in value.subsection_name">
                    {{val}} - {{value.description[$index]}}
                </li>
            </ul> 
        </div>
    </div>

    <div ng-view>
    </div>
</body>
</html>

